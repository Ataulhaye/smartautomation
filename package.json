{
  "name": "smartautomation",
  "displayName": "smartautomation",
  "description": "Automates the code comments and integration testing",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smartautomation.helloWorld",
        "title": "Automated Comments"
      }
    ],
    "configuration": {
      "title": "Python Auto Commenter",
      "properties": {
        "model.endpoint": {
          "type": "string",
          "default": "https://api-inference.huggingface.co/models/Qwen/Qwen2.5-Coder-32B-Instruct",
          "description": "API endpoint for the LLM model"
        },
        "model.apiKey": {
          "type": "string",
          "default": "",
          "description": "LLM model Access Key"
        },
        "model.organizationId": {
          "type": "string",
          "default": "",
          "description": "Organization ID of OpenAI account"
        },
        "model.modelName": {
          "type": "string",
          "default": "gpt-4o",
          "description": "Name of the LLM model to use"
        },
        "model.max_completion_tokens": {
          "type": "integer",
          "default": 0,
          "description": "Maximum tokens for model response"
        },
        "model.temperature": {
          "type": "number",
          "default": 0.3,
          "minimum": 0,
          "maximum": 1,
          "description": "Temperature parameter for the model"
        },
        "model.maxTokens": {
          "type": "integer",
          "default": 2048,
          "description": "Maximum tokens for model response"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@azure/identity": "^4.5.0",
    "@azure/openai": "^2.0.0",
    "@types/node-fetch": "^2.6.12",
    "node-fetch": "^2.7.0",
    "openai": "^4.77.4"
  }
}
